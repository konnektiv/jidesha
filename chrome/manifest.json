{
  "manifest_version": 2,
  "name": "Meet Konnektiv Desktop Streamer",
  "description": "A simple extension that allows you to stream your desktop into meetings on https://meet.konnektiv.de/",
  "version": "0.1.5",
  "minimum_chrome_version": "34",
  "icons": {
    "16": "konnektiv-logo-16x16.png",
    "48": "konnektiv-logo-48x48.png",
    "128": "konnektiv-logo-128x128.png"
  },
  "background": {
        "scripts": [ "background.js" ],
        "persistent": true
  },
  "permissions": [
      "desktopCapture"
  ],
  "externally_connectable": {
      "matches": [
          "*://meet.konnektiv.de/*"
      ]
  }
}
